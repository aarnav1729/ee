---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://elementumenergies.com/contact",
    "url": "https://elementumenergies.com/contact",
    "name": "Contact Us | Elementum Energies",
    "description":
      "Have questions or want to discuss an industrial project? Reach out, and let Elementum Energies help you craft the perfect solution with our innovative and reliable industrial services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://elementumenergies.com",
      "name": "Elementum Energies",
      "description":
        "Elementum Energies delivers innovative and reliable industrial solutions with a commitment to safety, efficiency, and sustainability."
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
