---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/fr/faqs.json";
import features from "@data/fr/features.json";
import pricing from "@data/fr/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
--- 

<MainLayout lang="fr">
  <AnnouncementBanner
    title="Découvrez Elementum Energies – Votre partenaire en solutions industrielles"
    subTitle="En savoir plus sur nos solutions innovantes et fiables."
  />

  <HeroSection
    title=`Équipez vos opérations avec <span class="text-yellow-500 dark:text-yellow-400">Elementum Energies</span>`
    subTitle="Des solutions industrielles innovantes et fiables, conçues pour répondre à vos besoins opérationnels."
    primaryBtn="Découvrez nos solutions"
    primaryBtnURL={getRelativeLocaleUrl("fr", "products")}
    secondaryBtn="Contactez-nous"
    secondaryBtnURL={getRelativeLocaleUrl("fr", "contact")}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews={`À partir de plus de <span class="font-bold">12,8k</span> avis`}
    src={heroImage}
    alt="Affichage des produits industriels Elementum Energies"
  />

  <ClientsSection
    title="Faites confiance aux leaders de l'industrie"
    subTitle="Découvrez la fiabilité choisie par les plus grands partenaires industriels."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Excellence Industrielle"
    subTitle="Chez Elementum Energies, nous relevons les défis de l'industrie moderne grâce à des solutions innovantes et un service exceptionnel. Nos produits et services sont conçus pour optimiser l'efficacité et la sécurité dans chaque application."
    src={featureImage}
    alt="Présentation des solutions industrielles Elementum Energies"
    features={features}
  />

  <FeaturesNavs
    title=`Personnalisez les offres de <span class="text-yellow-500 dark:text-yellow-400">Elementum Energies</span> pour répondre parfaitement à vos besoins industriels.`
    tabs={[
      {
        heading: "Produits industriels robustes",
        content:
          "Optimisez vos opérations avec nos solutions industrielles avancées, conçues pour la durabilité et des performances optimales dans des environnements exigeants.",
        svg: "tools",
        src: tools,
        alt: "Équipements industriels de haute qualité en exposition",
        first: true,
      },
      {
        heading: "Systèmes de gestion intégrés",
        content:
          "Supervisez aisément vos opérations avec nos systèmes de gestion intuitifs, offrant des aperçus clairs et un contrôle efficace.",
        svg: "dashboard",
        src: dashboard,
        alt: "Représentation graphique de tableaux de bord industriels",
        second: true,
      },
      {
        heading: "Performance fiable",
        content:
          "Bénéficiez d'une efficacité et d'une constance incomparables grâce à nos fonctionnalités de pointe, conçues pour répondre aux exigences industrielles les plus rigoureuses.",
        svg: "house",
        src: construction,
        alt: "Infrastructure moderne d'une installation industrielle",
      },
    ]}
  />

  <TestimonialsSection
    title="Accélérez vos opérations"
    subTitle="Chez Elementum Energies, notre service rapide et nos solutions expertes vous permettent d'atteindre une efficacité opérationnelle dès le premier jour."
    testimonials={[
      {
        content:
          "Elementum Energies a considérablement amélioré notre efficacité opérationnelle. Leurs solutions fiables et leur support expert ont transformé nos processus et apporté des résultats exceptionnels.",
        author: "Samantha Ruiz",
        role: "Directrice des opérations | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "clients industriels servis dans divers secteurs",
      },
      {
        count: "35%",
        description:
          "augmentation de l'efficacité opérationnelle rapportée par nos clients",
      },
      {
        count: "15,3%",
        description:
          "réduction des coûts de maintenance grâce à nos solutions innovantes",
      },
      {
        count: "2x",
        description:
          "délai d'exécution réduit grâce à notre chaîne d'approvisionnement robuste",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Questions<br />fréquemment posées" faqs={faqs} />

  <HeroSectionAlt
    title="Construisons ensemble l'avenir"
    subTitle="Découvrez comment Elementum Energies révolutionne l'industrie grâce à des solutions avancées et un service exceptionnel."
    url="/contact"
  />
</MainLayout>
