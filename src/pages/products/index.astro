const pageTitle = `Products | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
    <h1 class="mb-8 text-4xl font-bold text-neutral-800 dark:text-neutral-100">Products</h1>

    <!-- Category Tabs with active state -->
    <nav class="mb-8">
      <div class="inline-flex divide-x rounded-lg border dark:divide-neutral-700 dark:border-neutral-700">
        <button
          type="button"
          class="px-4 py-2 text-sm font-medium bg-blue-500 text-white active-tab"
          data-target="#oilGasSection"
        >
          Oil &amp; Gas
        </button>
        <button
          type="button"
          class="px-4 py-2 text-sm font-medium text-neutral-700 hover:bg-neutral-200 dark:text-neutral-300 dark:hover:bg-neutral-700"
          data-target="#refinerySection"
        >
          Refineries
        </button>
      </div>
    </nav>

    <!-- Oil & Gas Section -->
    <section id="oilGasSection" class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {oilGasProducts.map((product, index) => (
        <div
          class="cursor-pointer p-4 border rounded shadow hover:shadow-lg"
          data-product-id={product.id}
        >
          <img src={product.main.imgMain} alt={product.main.imgAlt} class="w-full h-48 object-cover rounded" />
          <h3 class="mt-2 text-xl font-bold">{product.title}</h3>
        </div>
      ))}
    </section>

    <!-- Refineries Section (hidden by default) -->
    <section id="refinerySection" class="hidden grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {refineryProducts.map((product, index) => (
        <div
          class="cursor-pointer p-4 border rounded shadow hover:shadow-lg"
          data-product-id={product.id}
        >
          <img src={product.main.imgMain} alt={product.main.imgAlt} class="w-full h-48 object-cover rounded" />
          <h3 class="mt-2 text-xl font-bold">{product.title}</h3>
        </div>
      ))}
    </section>
  </div>

  <!-- Modal for Product Details -->
  <div id="productModal" class="fixed inset-0 hidden z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white dark:bg-neutral-900 p-6 rounded-lg max-w-3xl w-full relative overflow-auto max-h-[90vh]">
      <button id="closeModal" class="absolute top-2 right-2 text-2xl font-bold text-neutral-700 dark:text-neutral-300">&times;</button>
      <div id="modalContent"></div>
    </div>
  </div>
</MainLayout>

<script is:inline>
  // --- TAB SWITCHING & ACTIVE STATE LOGIC ---
  document.addEventListener("DOMContentLoaded", function () {
    const oilGasSection = document.getElementById("oilGasSection");
    const refinerySection = document.getElementById("refinerySection");
    const tabButtons = document.querySelectorAll('[data-target]');
    
    // Initialize: show Oil & Gas and mark its button as active
    oilGasSection.classList.remove("hidden");
    refinerySection.classList.add("hidden");

    tabButtons.forEach(button => {
      button.addEventListener("click", function () {
        const targetId = button.getAttribute("data-target");
        // Toggle sections
        if (targetId === "#oilGasSection") {
          oilGasSection.classList.remove("hidden");
          refinerySection.classList.add("hidden");
        } else {
          refinerySection.classList.remove("hidden");
          oilGasSection.classList.add("hidden");
        }
        // Update active state for buttons
        tabButtons.forEach(btn => {
          btn.classList.remove("bg-blue-500", "text-white");
          btn.classList.add("text-neutral-700", "hover:bg-neutral-200", "dark:text-neutral-300", "dark:hover:bg-neutral-700");
        });
        button.classList.add("bg-blue-500", "text-white");
      });
    });
  });

  // --- MODAL LOGIC FOR PRODUCT DETAILS ---
  // Convert products data to plain JS for client usage
  const productsData = JSON.parse(JSON.stringify(products));
  document.addEventListener("DOMContentLoaded", function () {
    const modal = document.getElementById("productModal");
    const modalContent = document.getElementById("modalContent");
    const closeModal = document.getElementById("closeModal");

    document.querySelectorAll("[data-product-id]").forEach(card => {
      card.addEventListener("click", function () {
        const productId = card.getAttribute("data-product-id");
        const product = productsData.find(p => p.id.toString() === productId);
        if (product) {
          modalContent.innerHTML = `
            <h2 class="text-2xl font-bold mb-4">${product.title}</h2>
            <img src="${product.main.imgMain}" alt="${product.main.imgAlt}" class="w-full mb-4 rounded" />
            <p class="mb-4">${product.main.content}</p>
            <p class="mb-4">${product.description}</p>
            <h3 class="text-xl font-bold mb-2">${product.longDescription.title}</h3>
            <p class="mb-2">${product.longDescription.subTitle}</p>
            ${ product.descriptionList ? `<div class="mb-4"><ul>${product.descriptionList.map(item => `<li><strong>${item.title}:</strong> ${item.subTitle}</li>`).join('')}</ul></div>` : '' }
            <div class="flex justify-between mb-4">
              <div>
                ${ product.specificationsLeft ? `<ul>${product.specificationsLeft.map(item => `<li><strong>${item.title}:</strong> ${item.subTitle}</li>`).join('')}</ul>` : '' }
              </div>
              <div>
                ${ product.specificationsRight ? `<ul>${product.specificationsRight.map(item => `<li><strong>${item.title}:</strong> ${item.subTitle}</li>`).join('')}</ul>` : '' }
              </div>
            </div>
            <a href="${product.longDescription.btnURL}" class="inline-block bg-blue-500 text-white px-4 py-2 rounded">${product.longDescription.btnTitle}</a>
          `;
          modal.classList.remove("hidden");
        }
      });
    });

    closeModal.addEventListener("click", function () {
      modal.classList.add("hidden");
    });
  });
</script>
