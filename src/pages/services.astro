---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Delivering Expert Guidance",
    subTitle:
      "Embarking on an industrial project can be overwhelming. With our professional consultation services, we guide you through every stage, ensuring informed decisions. Whether you are a plant manager or an operations specialist, our experts offer tailored advice on product selection, project scope, and regulatory compliance.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with industrial plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Industry professional working at the office",
  },
  {
    isRightSection: false,
    title: "Transforming Designs into Reality",
    subTitle:
      "Our skilled craftsmen bring precision and excellence to every industrial project. From minor installations to major structural work, Elementum Energies offers reliable construction and integration services to turn your vision into reality. We uphold the highest standards of safety and quality, utilizing top-tier products and proven techniques.",
    img: beforeAfter,
    imgAlt: "Industrial project site before and after transformation",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Navigating Projects with Professional Oversight",
    subTitle:
      "Effective project management is at the heart of every successful industrial operation. Elementum Energies provides comprehensive planning and management services that keep your project on track and within budget. Let us handle the complexities of workflow coordination, resource allocation, and stakeholder communication while you focus on your core business.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers coordinating an industrial project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of an industrial site under management",
  },
  {
    isRightSection: false,
    title: "Ensuring Long-lasting Performance",
    subTitle:
      "Our commitment to your project extends well beyond its completion. Elementum Energies offers ongoing maintenance and support services to ensure the longevity and efficiency of your industrial operations. From routine inspections to rapid emergency response, our dedicated team is here to support you at every step.",
    img: usingTools,
    imgAlt:
      "Technician using industrial tools for maintenance and repair",
  },
  {
    isRightSection: true,
    title: "Crafting Bespoke Strategies for Unique Challenges",
    subTitle:
      "For our larger enterprise clients, Elementum Energies offers custom solutions designed to address specific industrial challenges. By understanding your unique needs, we engineer tailored strategies aimed at optimizing operations, enhancing efficiency, and driving your business forward.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In-progress industrial facility under construction",
    imgTwo: underConstruction,
    imgTwoAlt: "Building under construction with a focus on industrial quality",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://elementumenergies.com/services",
    "url": "https://elementumenergies.com/services",
    "name": "Expert Consultation Services | Elementum Energies",
    "description": "Uniting industry expertise with your vision, Elementum Energies provides exceptional service and comprehensive solutions in the industrial sectorâ€”from consultation to project implementation.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://elementumenergies.com",
      "name": "Elementum Energies",
      "description": "Elementum Energies delivers innovative and reliable industrial solutions with a focus on safety, efficiency, and sustainability."
    },
    "inLanguage": "en-US"
  }}
>
  <!-- MainSection is the introductory section of the page, it also contains a CTA button -->
  <MainSection
    title="Uniting Industry Expertise with Your Vision"
    subTitle="At Elementum Energies, we provide comprehensive solutions and exceptional service for industrial projects. Our experienced team is dedicated to supporting your project from concept to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
       They alternate for variety in design.
       The 'btnExists' property toggles the display of a button for additional details.
       RightSection conditionally renders one or two images based on the 'single' property.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!-- FeaturesStats section showcases key statistics -->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Elementum Energies, we deliver industry-leading services that ensure your operations run smoothly and are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Elementum Energies as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
